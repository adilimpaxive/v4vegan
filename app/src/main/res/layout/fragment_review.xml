<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null">

    <RelativeLayout
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:id="@+id/textdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:hint="Enter Name"
            android:capitalize="words"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/white"
            android:textSize="12sp" />

        <EditText
            android:capitalize="words"
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="30dp"
            android:hint="Enter Review Here"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="12sp" />

       
    </RelativeLayout>

    <RatingBar
        android:background="@color/blacktransparent"
        android:id="@+id/reviewicons"
        style="@style/ImageRatingBar"
        android:layout_width="97dp"
        android:layout_height="40dp"
        android:layout_below="@id/textdata"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="5dp"
        android:numStars="5"
        android:stepSize="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewicons"
        android:layout_alignStart="@id/reviewicons"
        android:textColor="@color/white"
        android:paddingLeft="3dp"
        android:text="Add Rating"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_addrating"
        android:layout_alignLeft="@id/reviewicons" />

    <Button
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_addrating"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_colored"
        android:text="Submit"
        android:id="@+id/btn_submit"
        android:clickable="true"
        android:layout_marginBottom="15dp"
        android:textSize="16sp"/>
</RelativeLayout>
